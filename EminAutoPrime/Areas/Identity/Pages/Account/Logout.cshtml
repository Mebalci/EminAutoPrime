@page
@model LogoutModel

@{
    ViewData["Title"] = "Çıkış Yap";
}

<div class="container-fluid d-flex justify-content-center align-items-center login-background" style="min-height: 100vh;">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px; margin-top: 100px; background-color: #00d084;">
        <h2 class="text-center text-dark mb-4">Hesaptan Çıkış Yap</h2>
        <p class="text-center text-white">Çıkış yapmak istediğinizden emin misiniz?</p>
        <form method="post">
            <button type="submit" class="btn btn-dark w-100 mb-3" style="height: 50px;">Evet, Çıkış Yap</button>
        </form>
        <a href="/" class="btn btn-secondary w-100" style="height: 50px;">Hayır, İptal Et</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .login-background {
        background-image: url('/img/carousel-1.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
</style>
