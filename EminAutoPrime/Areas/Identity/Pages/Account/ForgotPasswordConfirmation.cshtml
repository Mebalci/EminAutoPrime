@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Şifre Sıfırlama Onayı";
}

<div class="container-fluid d-flex justify-content-center align-items-center login-background" style="min-height: 100vh;">
    <div class="card shadow-sm p-4 text-center" style="width: 100%; max-width: 400px; margin-top: 100px; background-color: #00d084;">

        <h2 class="text-center text-dark mb-4">Şifre Sıfırlama Onayı</h2>

        <p class="text-white mb-4">
            Şifrenizi sıfırlamak için lütfen e-postanızı kontrol edin.
        </p>

        <a href="/" class="btn btn-dark w-100" style="height: 50px;">Ana Sayfaya Dön</a>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .login-background {
        background-image: url('/img/carousel-1.png'); 
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
</style>
