@model EminAutoPrime.Models.EminAutoAdminViewModel

@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container-fluid py-5 mt-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="display-4 text-primary wow fadeInUp" data-wow-delay="0.1s">Admin Paneli</h1>
        </div>

        <!-- Genel İstatistik Kartları -->
        <div class="row g-4">
            <!-- Toplam Araç -->
            <div class="col-md-4 wow fadeInUp" data-wow-delay="0.2s">
                <div class="card border-0 shadow h-100">
                    <div class="card-body d-flex align-items-center">
                        <div>
                            <h3 class="card-title text-primary">Toplam Araç</h3>
                            <p class="card-text display-6">@Model.TotalCars</p>
                        </div>
                        <i class="fas fa-car fa-3x ms-auto text-primary"></i>
                    </div>
                    <div class="card-footer text-center bg-light">
                        <a href="/EminAutoArac/Index" class="btn btn-primary w-100 rounded-pill">Araçları Yönet</a>
                    </div>
                </div>
            </div>

            <!-- Toplam Servis -->
            <div class="col-md-4 wow fadeInUp" data-wow-delay="0.4s">
                <div class="card border-0 shadow h-100">
                    <div class="card-body d-flex align-items-center">
                        <div>
                            <h3 class="card-title text-success">Toplam Servis</h3>
                            <p class="card-text display-6">@Model.TotalServices</p>
                        </div>
                        <i class="fas fa-tools fa-3x ms-auto text-success"></i>
                    </div>
                    <div class="card-footer text-center bg-light">
                        <a href="/EminAutoServis/Index" class="btn btn-success w-100 rounded-pill">Servisleri Yönet</a>
                    </div>
                </div>
            </div>

            <!-- Toplam Kampanya -->
            <div class="col-md-4 wow fadeInUp" data-wow-delay="0.6s">
                <div class="card border-0 shadow h-100">
                    <div class="card-body d-flex align-items-center">
                        <div>
                            <h3 class="card-title text-info">Toplam Kampanya</h3>
                            <p class="card-text display-6">@Model.ToplamKampanyalar</p>
                        </div>
                        <i class="fas fa-percent fa-3x ms-auto text-info"></i>
                    </div>
                    <div class="card-footer text-center bg-light">
                        <a href="/Kampanya/Index" class="btn btn-info w-100 rounded-pill">Kampanyaları Yönet</a>
                    </div>
                </div>
            </div>
        </div>

        <hr class="my-5 wow fadeInUp" data-wow-delay="0.2s" />

        <!-- Müşteri Yönetimi -->
        <div class="row g-4">
            <div class="col-md-12 wow fadeInUp" data-wow-delay="0.4s">
                <div class="card border-0 shadow">
                    <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Müşteri Yönetimi</h4>
                        <a href="/Admin/MusteriYonetimi" class="btn btn-dark rounded-pill">Müşterileri Gör</a>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">Müşteri bilgilerini görüntülemek ve düzenlemek için yukarıdaki butona tıklayın.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
