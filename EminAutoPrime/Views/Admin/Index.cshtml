@model EminAutoPrime.Models.EminAutoAdminViewModel


@{
    ViewData["Title"] = "Admin Paneli";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<style>
    .card-title i {
        font-size: 2rem;
        color: var(--bs-primary);
    }

    .table thead th {
        background-color: #f8f9fa;
        color: #333;
    }
</style>

<!-- Admin Dashboard Başlangıç -->
<div class="container-fluid pt-5">
    <div class="container">
        <!-- Dashboard Başlık -->
        <div class="text-center mb-5">
            <h4 class="text-primary">Admin Paneli</h4>
            <h1 class="display-5 mb-4">Emin Auto Prime Yönetim Paneli</h1>
            <p>Servis, müşteri ve araç işlemlerini buradan yönetin.</p>
        </div>

        <!-- İstatistik Kartları -->
        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <div class="card bg-light border-0 shadow-sm text-center">
                    <div class="card-body py-4">
                        <h3 class="card-title text-primary mb-3"><i class="fas fa-car"></i></h3>
                        <h5 class="card-text">Servisteki Araçlar</h5>
                        <p class="display-6 mb-0">@Model.TotalCars</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card bg-light border-0 shadow-sm text-center">
                    <div class="card-body py-4">
                        <h3 class="card-title text-primary mb-3"><i class="fas fa-users"></i></h3>
                        <h5 class="card-text">Toplam Müşteriler</h5>
                        <p class="display-6 mb-0">@Model.TotalServices</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card bg-light border-0 shadow-sm text-center">
                    <div class="card-body py-4">
                        <h3 class="card-title text-primary mb-3"><i class="fas fa-tools"></i></h3>
                        <h5 class="card-text">Servis Kapasitesi</h5>
                        <p class="display-6 mb-0">20/30</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card bg-light border-0 shadow-sm text-center">
                    <div class="card-body py-4">
                        <h3 class="card-title text-primary mb-3"><i class="fas fa-bullhorn"></i></h3>
                        <h5 class="card-text">Aktif Kampanyalar</h5>
                        <p class="display-6 mb-0">@Model.ToplamKampanyalar</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Araç ve Servis Durumu -->
        <div class="row g-5 mt-5">
            <div class="col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5>Araç Servis Durumları</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                BMW 320i - Ahmet Yılmaz
                                <span class="badge bg-warning rounded-pill">Tamirde</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Ford Focus - Ayşe Kaya
                                <span class="badge bg-success rounded-pill">Hazır</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Mercedes C200 - Ali Demir
                                <span class="badge bg-danger rounded-pill">Başlamadı</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Kampanyalar -->
            <div class="col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5>Aktif Kampanyalar</h5>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Kampanya Başlığı</th>
                                    <th>Başlangıç Tarihi</th>
                                    <th>Bitiş Tarihi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var kampanya in Model.Kampanyalar)
                                {
                                    <tr>
                                        <td>@kampanya.KampanyaBasligi</td>
                                        <td>@kampanya.BaslangicTarihi?.ToString("dd/MM/yyyy")</td>
                                        <td>@kampanya.BitisTarihi?.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @if (!Model.Kampanyalar.Any())
                        {
                            <p class="text-muted">Şu anda aktif bir kampanya bulunmamaktadır.</p>
                        }
                    </div>
                </div>
            </div>


        <!-- İletişim ve Yorumlar -->
        <div class="row g-5 mt-5">
            <div class="col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5>Müşteri İletişim Talepleri</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <strong>Mehmet Çelik:</strong> "Araç durumum hakkında bilgi alabilir miyim?"
                                <button class="btn btn-primary btn-sm float-end">Cevapla</button>
                            </li>
                            <li class="list-group-item">
                                <strong>Zeynep Çakır:</strong> "Kampanya hakkında detaylı bilgi alabilir miyim?"
                                <button class="btn btn-primary btn-sm float-end">Cevapla</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5>Müşteri Yorumları</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <strong>Fatma Yıldız:</strong> "Servis gerçekten çok hızlıydı. Teşekkür ederim!"
                                <button class="btn btn-primary btn-sm float-end">Cevapla</button>
                            </li>
                            <li class="list-group-item">
                                <strong>Emre Kara:</strong> "Parça fiyatları biraz yüksek gibi. İyileştirme olabilir."
                                <button class="btn btn-primary btn-sm float-end">Cevapla</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

