@model IEnumerable<EminAutoPrime.Models.EminAutoArac>

@{
    ViewData["Title"] = "Araç Yönetimi";
}

<div class="container py-5">
    <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Araç Yönetimi</h1>

    <!-- Araç Ekleme Butonu -->
    <div class="text-end mb-4 wow fadeInUp" data-wow-delay="0.2s">
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 py-2">
            <i class="fas fa-plus-circle me-2"></i> Yeni Araç Ekle
        </a>
    </div>

    <!-- Araç Tablosu -->
    <div class="table-responsive wow fadeInUp" data-wow-delay="0.3s">
        <table class="table table-striped table-hover text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Marka)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Model)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Yil)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Plaka)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().SahipAdi)</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Marka</td>
                        <td>@item.Model</td>
                        <td>@item.Yil</td>
                        <td>@item.Plaka</td>
                        <td>@item.SahipAdi</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a asp-action="Edit" asp-route-id="@item.AracId" class="btn btn-warning btn-sm me-2">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>
                                <a asp-action="Details" asp-route-id="@item.AracId" class="btn btn-info btn-sm me-2">
                                    <i class="fas fa-info-circle"></i> Detaylar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.AracId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
