@model IEnumerable<EminAutoPrime.Models.RandevuViewModel>

<style>
    .table-hover tbody tr:hover {
        background-color: var(--bs-light);
        cursor: pointer;
    }

    .table th {
        background-color: var(--bs-primary);
        color: white;
        text-align: center;
    }

    .table td {
        text-align: center;
        vertical-align: middle;
    }

    .table {
        border: 1px solid var(--bs-primary);
        border-radius: 10px;
        overflow: hidden;
    }

    .status-beklemede {
        color: #ffc107;  
        font-weight: bold;
    }

    .status-onaylandi {
        color: #0d6efd;  
        font-weight: bold; 
    }

    .status-tamamlandi {
        color: var(--bs-primary);
        font-weight: bold;
    }
</style>

<div class="container mt-4">
    <table class="table table-bordered table-hover shadow-sm">
        <thead>
            <tr>
                <th>Randevu Tarihi</th>
                <th>Durum</th>
                <th>Talep Tarihi</th>
                <th>Arac Bilgisi</th>
                <th>Açıklama</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var randevu in Model)
            {
                <tr>
                    <td>@randevu.RandevuTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        @if (randevu.Durum == "Beklemede")
                        {
                            <span class="status-beklemede">@randevu.Durum</span>
                        }
                        else if (randevu.Durum == "Onaylandı")
                        {
                            <span class="status-onaylandi">@randevu.Durum</span>
                        }
                        else if (randevu.Durum == "Tamamlandı")
                        {
                            <span class="status-tamamlandi">@randevu.Durum</span>
                        }
                    </td>
                    <td>@randevu.TalepTarihi.ToString("dd.MM.yyyy")</td>
                    <td>@randevu.AracBilgisi</td>
                    <td>@randevu.Aciklama</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
