<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] - EminAutoPrime</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <div class="container-fluid topbar bg-light px-5 d-none d-lg-block">
        <div class="row gx-0 align-items-center">
            <div class="col-lg-8 text-center text-lg-start mb-2 mb-lg-0">
                <div class="d-flex flex-wrap">
                    <a href="tel:+905380800549" class="text-muted small me-4"><i class="fas fa-phone-alt text-primary me-2"></i>0538 080 05 49</a>
                    <a href="mailto:meinbalci06@gmail.com" class="text-muted small me-0"><i class="fas fa-envelope text-primary me-2"></i>EminAutoPrime@gmail.com</a>
                </div>
            </div>
            <div class="col-lg-4 text-center text-lg-end">
                <div class="d-inline-flex align-items-center" style="height: 45px;">
                    <a id="registerButton" href="/Identity/Account/Register" class="text-dark"><small class="me-3"><i class="fa fa-user text-primary me-2"></i>Kayıt</small></a>
                    <a id="loginButton" href="/Identity/Account/Login" class="text-dark"><small class="me-3"><i class="fa fa-sign-in-alt text-primary me-2"></i>Giriş</small></a>
                    <div class="dropdown">
                        <a href="#" class="dropdown-toggle text-dark" data-bs-toggle="dropdown"><small><i class="fa fa-home text-primary me-2"></i> My Dashboard</small></a>
                        <div class="dropdown-menu rounded">
                            <a href="#" class="dropdown-item"><i class="fas fa-user-alt me-2"></i> My Profile</a>
                            <a href="#" class="dropdown-item"><i class="fas fa-comment-alt me-2"></i> Inbox</a>
                            <a href="#" class="dropdown-item"><i class="fas fa-bell me-2"></i> Notifications</a>
                            <a href="#" class="dropdown-item"><i class="fas fa-cog me-2"></i> Account Settings</a>
                            <a href="#" class="dropdown-item"><i class="fas fa-power-off me-2"></i> Log Out</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid position-relative p-0">
        <nav class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0">
            <a href="/Home" class="navbar-brand p-0">
                <img src="~/img/logo.png" alt="Logo" style="width: 120px; height: 80px;" class="me-2 ">
                <span class="text-primary " >Emin Auto Prime</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-0">
                    <a href="/" class="nav-item nav-link ">Ana Sayfa</a>
                    <a href="/About" class="nav-item nav-link">Hakkımızda</a>
                    <a href="/Services" class="nav-item nav-link">Servisler</a>
                    <a href="/Blog" class="nav-item nav-link">Blog</a>
                    <a href="/Contact" class="nav-item nav-link">İletişime Geçin</a>
                </div>
            </div>
        </nav>
    </div>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="container-fluid footer py-5">
        <div class="container py-5 border-start-0 border-end-0">
            <div class="row g-5">
                <div class="col-md-4 d-flex flex-column align-items-start">
                    <div class="d-flex align-items-center">
                        <img src="~/img/logo.png" alt="Logo" style="width: 60px; height: auto;" class="me-2">
                        <h2 class="text-white mb-0">Emin Auto Prime</h2>
                    </div>
                    <p class="mt-3 text-white-50">Aracınıza Değer, Yolunuza Güven Katıyoruz!</p>
                </div>
                <div class="col-md-2 text-center text-md-start">
                    <h4 class="text-white mb-4">Hızlı Linkler</h4>
                    <div class="d-flex flex-column align-items-start">
                        <a href="#" class="text-white-50 mb-2"><i class="fas fa-angle-right me-2"></i>Hakkımızda</a>
                        <a href="#" class="text-white-50"><i class="fas fa-angle-right me-2"></i>Blog</a>
                    </div>
                </div>
                <div class="col-md-3 text-center text-md-start">
                    <h4 class="text-white mb-4">Destek</h4>
                    <div class="d-flex flex-column align-items-start">
                        <a href="#" class="text-white-50 mb-2"><i class="fas fa-angle-right me-2"></i>Politikalar</a>
                        <a href="#" class="text-white-50"><i class="fas fa-angle-right me-2"></i>İletişim</a>
                    </div>
                </div>
                <div class="col-md-3 text-center text-md-end">
                    <h4 class="text-white mb-4">İletişim Bilgileri</h4>
                    <p class="text-white-50 mb-1">Kırıkkale Üniversitesi Yenişehir/Kırıkkale</p>
                    <p class="text-white-50 mb-0">(538) 080 05 49</p>
                </div>
            </div>
        </div>
    </footer>



    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/js/main.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
